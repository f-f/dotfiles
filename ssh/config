# Generic
Host *
  ServerAliveInterval 30
  UseKeychain yes
  AddKeysToAgent yes

# Personal servers
Host augustus
  Hostname augustus.ferrai.io
  User root
  Port 10000
  IdentityFile ~/.ssh/augustus

Host claudius
  Hostname claudius.ferrai.io
  User root
  Port 10000
  IdentityFile ~/.ssh/claudius

# Different key for github
Host github.com
  IdentityFile ~/.ssh/github

# Local machine config, for work configs
Include local/* 
