#!/usr/bin/env python3

from pushbullet import Pushbullet
import sys
import os

with open(os.environ['HOME'] + '/.tmp/pb-token', 'r') as f:
    token = f.read()

pb = Pushbullet(token)
title = ''
text = ''

if len(sys.argv) > 1:
    title = sys.argv[1]
if len(sys.argv) > 2:
    text = sys.argv[2]

pb.push_note(title, text)
